{
  "name": "@roziscoding/format",
  "version": "1.0.0",
  "description": "Small formatting library based on a tagged template literal",
  "main": "dist/index.js",
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "@types/node": "^14.0.27"
  },
  "devDependencies": {
    "mocha": "^8.1.0",
    "nyc": "^15.1.0",
    "chai": "^4.2.0"
  },
  "scripts": {
