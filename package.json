  "bugs": {
    "url": "https://github.com/roziscoding/format/issues"
  },
  "homepage": "https://github.com/roziscoding/format#readme",
  "files": [
    "dist/**/*.{d.ts,js}",
    "!dist/types/*"
  ]
}
